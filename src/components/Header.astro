---
import Logo from '../assets/logoCafe2.svg';
---

<header class="text-warm-cream">
    <nav class="mx-auto px-4 sm:px-6 py-4 md:py-6 font-sans-serif">
        <ul class="hidden md:flex justify-between items-center w-full max-w-4xl mx-auto text-base lg:text-lg rounded-full bg-off-black/50 px-4 lg:px-6 py-2">
                <li><a href="/" class="hover:text-burnt-orange transition-colors duration-200 px-2">Accueil</a></li>
                <li><a href="/" class="hover:text-burnt-orange transition-colors duration-200 px-2">Menu</a></li>
                <li><a href="/" class="hover:text-burnt-orange transition-colors duration-200 px-2">Blog</a></li>
                <li><a href="/" class="hover:text-burnt-orange transition-colors duration-200 px-2">Média</a></li>
                <li><a href="/" class="hover:text-burnt-orange transition-colors duration-200 px-2">Contact</a></li>
        </ul>
        <div class="flex justify-end items-center">            
            <!-- Mobile Menu Button -->
            <button class="md:hidden hover:text-burnt-orange transition-colors" id="mobile-menu-button" aria-label="Menu">
                <svg class="h-8 w-8 sm:h-10 sm:w-10" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
                </svg>
            </button>
        </div>

        <!-- Mobile Navigation -->
        <div class="md:hidden hidden mt-4 pb-4" id="mobile-menu">
            <ul class="flex flex-col justify-end items-end space-y-3 text-base sm:text-lg">
                <li><a href="/" class="block hover:text-burnt-orange transition-colors duration-200 py-2">Accueil</a></li>
                <li><a href="/" class="block hover:text-burnt-orange transition-colors duration-200 py-2">Menu</a></li>
                <li><a href="/" class="block hover:text-burnt-orange transition-colors duration-200 py-2">Blog</a></li>
                <li><a href="/" class="block hover:text-burnt-orange transition-colors duration-200 py-2">Média</a></li>
                <li><a href="/" class="block hover:text-burnt-orange transition-colors duration-200 py-2">Contact</a></li>
            </ul>
        </div>
    </nav>
</header>

<script>
    // Mobile menu toggle
    const mobileMenuButton = document.getElementById('mobile-menu-button');
    const mobileMenu = document.getElementById('mobile-menu');

    mobileMenuButton?.addEventListener('click', () => {
        mobileMenu?.classList.toggle('hidden');
    });
</script>