<section class="relative bg-off-black py-20 md:py-32 pb-40 md:pb-48 overflow-hidden" id="contact">
    <div class="max-w-7xl mx-auto px-6">
        <!-- Section Header -->
        <div class="text-center mb-16">
            <h2 class="text-4xl md:text-5xl lg:text-6xl font-bold text-warm-cream mb-4">
                Nous Contacter
            </h2>
            <p class="text-lg md:text-xl text-warm-cream/80 max-w-2xl mx-auto">
                Venez nous rendre visite ou contactez-nous pour toute question
            </p>
        </div>

        <!-- Contact Grid -->
        <div class="grid lg:grid-cols-2 gap-12 items-start">
            <!-- Contact Information -->
            <div class="space-y-8">
                <!-- Address -->
                <div class="bg-warm-cream rounded-3xl p-8 shadow-2xl">
                    <div class="flex items-start gap-4">
                        <div class="shrink-0 w-12 h-12 bg-burnt-orange rounded-full flex items-center justify-center">
                            <svg class="w-6 h-6 text-pure-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
                            </svg>
                        </div>
                        <div>
                            <h3 class="text-xl font-bold text-dark-coffee mb-2">Adresse</h3>
                            <p class="text-dark-coffee/70">
                                123 Rue du Café<br/>
                                75001 Paris, France
                            </p>
                        </div>
                    </div>
                </div>

                <!-- Phone -->
                <div class="bg-warm-cream rounded-3xl p-8 shadow-2xl">
                    <div class="flex items-start gap-4">
                        <div class="shrink-0 w-12 h-12 bg-burnt-orange rounded-full flex items-center justify-center">
                            <svg class="w-6 h-6 text-pure-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
                            </svg>
                        </div>
                        <div>
                            <h3 class="text-xl font-bold text-dark-coffee mb-2">Téléphone</h3>
                            <a href="tel:+33123456789" class="text-dark-coffee/70 hover:text-burnt-orange transition-colors">
                                +33 1 23 45 67 89
                            </a>
                        </div>
                    </div>
                </div>

                <!-- Email -->
                <div class="bg-warm-cream rounded-3xl p-8 shadow-2xl">
                    <div class="flex items-start gap-4">
                        <div class="shrink-0 w-12 h-12 bg-burnt-orange rounded-full flex items-center justify-center">
                            <svg class="w-6 h-6 text-pure-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                            </svg>
                        </div>
                        <div>
                            <h3 class="text-xl font-bold text-dark-coffee mb-2">Email</h3>
                            <a href="mailto:contact@thedailygrind.fr" class="text-dark-coffee/70 hover:text-burnt-orange transition-colors">
                                contact@thedailygrind.fr
                            </a>
                        </div>
                    </div>
                </div>

                <!-- Opening Hours -->
                <div class="bg-warm-cream rounded-3xl p-8 shadow-2xl">
                    <div class="flex items-start gap-4">
                        <div class="shrink-0 w-12 h-12 bg-burnt-orange rounded-full flex items-center justify-center">
                            <svg class="w-6 h-6 text-pure-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                            </svg>
                        </div>
                        <div class="flex-1">
                            <h3 class="text-xl font-bold text-dark-coffee mb-4">Horaires d'Ouverture</h3>
                            <div class="space-y-2 text-dark-coffee/70">
                                <div class="flex justify-between">
                                    <span class="font-semibold">Lundi - Vendredi</span>
                                    <span>7h00 - 19h00</span>
                                </div>
                                <div class="flex justify-between">
                                    <span class="font-semibold">Samedi</span>
                                    <span>8h00 - 20h00</span>
                                </div>
                                <div class="flex justify-between">
                                    <span class="font-semibold">Dimanche</span>
                                    <span>9h00 - 18h00</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Social Media -->
                <div class="bg-warm-cream rounded-3xl p-8 shadow-2xl">
                    <h3 class="text-xl font-bold text-dark-coffee mb-4">Suivez-nous</h3>
                    <div class="flex gap-4">
                        <a href="#" class="w-12 h-12 bg-dark-coffee rounded-full flex items-center justify-center hover:bg-burnt-orange transition-colors group">
                            <svg class="w-6 h-6 text-pure-white" fill="currentColor" viewBox="0 0 24 24">
                                <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
                            </svg>
                        </a>
                        <a href="#" class="w-12 h-12 bg-dark-coffee rounded-full flex items-center justify-center hover:bg-burnt-orange transition-colors group">
                            <svg class="w-6 h-6 text-pure-white" fill="currentColor" viewBox="0 0 24 24">
                                <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
                            </svg>
                        </a>
                        <a href="#" class="w-12 h-12 bg-dark-coffee rounded-full flex items-center justify-center hover:bg-burnt-orange transition-colors group">
                            <svg class="w-6 h-6 text-pure-white" fill="currentColor" viewBox="0 0 24 24">
                                <path d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z"/>
                            </svg>
                        </a>
                    </div>
                </div>
            </div>

            <!-- Google Maps -->
            <div class="h-full min-h-[600px] lg:min-h-full">
                <div class="bg-warm-cream rounded-3xl overflow-hidden shadow-2xl h-full">
                    <iframe 
                        src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2624.9914406081493!2d2.292292615674213!3d48.85837007928746!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x47e66fec70fb1d8f%3A0x40b82c3688c9460!2sEiffel%20Tower!5e0!3m2!1sen!2sfr!4v1234567890123!5m2!1sen!2sfr"
                        width="100%" 
                        height="100%" 
                        style="border:0; min-height: 600px;" 
                        allowfullscreen="" 
                        loading="lazy" 
                        referrerpolicy="no-referrer-when-downgrade"
                        class="w-full h-full"
                    ></iframe>
                </div>
            </div>
        </div>
    </div>

    <!-- Wave Transition (Optional) -->
    <div class="absolute bottom-0 left-0 w-full">
        <svg viewBox="0 0 1440 120" fill="none" xmlns="http://www.w3.org/2000/svg" class="w-full h-auto text-warm-cream">
            <path d="M0,60 C360,10 720,10 1080,60 C1260,85 1350,85 1440,60 L1440,120 L0,120 Z" fill="currentColor"/>
        </svg>
    </div>
</section>
