---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import Hero from "../components/Hero.astro";
import Menu from "../components/Menu.astro";
import Evenements from "../components/Evenements.astro";
import Contact from "../components/Contact.astro";
import Background from "../assets/images/coffeeBeans2.png";
---

<Layout>
    <div class="relative w-full min-h-screen overflow-x-hidden text-off-black" style={`background-image: url(${Background.src}); background-size: cover; background-position: center;`}>
        <Header />
        <Hero />
    </div>
    <Menu />
    <Evenements />
    <Contact />
</Layout>
